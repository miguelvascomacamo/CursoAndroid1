<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.miguel.teste.Perfil2Activity"
    android:background="@color/backgroundColor">

       <android.support.v4.widget.NestedScrollView
           android:padding="40dp"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           >
           <android.support.v7.widget.CardView
               android:layout_width="match_parent"
               android:layout_height="160dp"
               app:cardBackgroundColor="@color/cardBackground"
               app:cardElevation="10dp"
               >

               <LinearLayout
                   android:layout_margin="15dp"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="vertical"
                   >
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       android:textStyle="bold"
                       android:textColor="@android:color/white"
                       android:text="Card Title"
                       />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@android:color/white"
                       android:text="E bomestar a programar em android, pois essa esperiencia esta sendo unica e cada vez ,mais esta dando motivo para continuar, convido a todos a ingrenarem nessa."
                       >

                   </TextView>
                   
                   <ImageView
                       android:id="@+id/shareimg"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/ic_share_black_24dp"
                       android:layout_marginTop="5dp"
                       android:layout_gravity="end"
                       />

               </LinearLayout>
               
           </android.support.v7.widget.CardView>

       </android.support.v4.widget.NestedScrollView>



  <include layout="@layout/buttonsheet" />
</android.support.design.widget.CoordinatorLayout>
